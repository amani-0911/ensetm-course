{% extends 'auth.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}



    <div class="login">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="big-title">
                        <div class="big-title">

                        </div>
                    </div>
                    <div class="form-page">
                        <form method="post">
                            {% for message in app.flashes('messageTou') %}
                                <div class="alert alert-success">
                                    {{ message }}
                                </div>
                            {% endfor %}
                            {% for message in app.flashes('message') %}
                                <div class="alert alert-success">
                                    {{ message }}
                                </div>
                            {% endfor %}
                            {% for message in app.flashes('danger') %}
                            <div class="alert alert-danger">
                                {{ message }}
                            </div>
                            {% endfor %}
                            {% for message in app.flashes('warning') %}
                            <div class="alert alert-warning">
                                {{ message }}
                            </div>
                            {% endfor %}
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                                <h3>
                                <i class="las la-user-circle"></i>
                                     Connexion
                                   </h3>
                              <div class="row">

                                 <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                     <div class="form-group">
                                    <label for="inputEmail">Email</label>
                                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                                      </div>
                                 </div>
                                 <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                      <div class="form-group">
                                        <label for="inputPassword">Password</label>
                                       <input type="password" name="password" id="inputPassword" class="form-control" required>

                                       <input type="hidden" name="_csrf_token"
                                           value="{{ csrf_token('authenticate') }}"
                                         >
                                        </div>
                                 </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <button class="btn btn-lg btn-primary" type="submit">
                                        Connexion
                                    </button>

                                    </div>

                                    <a href="{{ path('app_forgotten_password') }}" class="forgotten"  style=" color: #00376b;">Mot de pass oublié &nbsp?
                                    </a>
                                <div class="card-text">
                                    Vous n’avez pas de compte &nbsp?
                                    <a href="{{ path('app_register') }}" style="color: #0095f6" >Inscrivez-vous
                                        </a>
                                </div>
                            </div>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {#-------------------------------------------------------#}



    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}



{% endblock %}
