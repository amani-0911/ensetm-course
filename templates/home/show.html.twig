{% extends 'base.html.twig' %}

{% block title %}Filieres{% endblock %}

{% block body %}
    <div class="page-heading title-lg">
        <div class="container">
            <h3>
                {{departements.NomDep}}
            </h3>
         </div>
        </div>
    <section class="subjects text-center" >
        <div class="container">
            <div class="big-title">

            </div>
            <div class="row flex">
                {% for filiere in departements.filieres %}
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 filiere">
                    <a href="#">
                    <div class="card subject-box">
                        <div class="card-body">
                            <h5 class="card-title">
                                  {{ filiere.nom }}

                            </h5>
                        </div>
                     </div>
                    </a>
                </div>
                {% endfor %}
            </div>
    </section>
{% endblock %}
