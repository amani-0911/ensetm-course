{% extends 'base.html.twig' %}

{% block title %}Articles index{% endblock %}

{% block body %}
    <h1> Mes Articles</h1>
    {% for message in app.flashes('message') %}
    <div class="alert alert-success">
             {{ message }}
    </div>
 {% endfor %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Publiè le</th>
                <th>Modifié le</th>
                <th>Module</th>
                <th>Semestre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in user.articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.titre }}</td>
                <td>{{ article.createdAt ? article.createdAt|date('d/m/y a h\\hi') : '' }}</td>
                <td>{{ article.updatedAt ? article.updatedAt|date('d/m/y a h\\hi'): '' }}</td>
                <td>{{ article.module }}</td>
                <td>{{ article.semestre }}</td>
                <td>
                    <a href="{{ path('articles_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('articles_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('articles_new') }}">Create new</a>
{% endblock %}
